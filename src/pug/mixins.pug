mixin slider-item(active, imgSrc)
    if active
        div.carousel-item.col-12.active.p-0
            img.d-block.w-100.fixedSize-1300-500-5(alt='...' src=`/templates/creative/bootstrap-creative/dist/assets/images/hp-slider/${imgSrc}.jpg`)
    else
        div.carousel-item.col-12.p-0
            img.d-block.w-100.fixedSize-1300-500-5(alt='...' src=`/templates/creative/bootstrap-creative/dist/assets/images/hp-slider/${imgSrc}.jpg`)
